{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "rootDir": "./src",
    "paths": {
      "@/*": ["app/*"],
      "#/*": ["assets/*"],
      "src/*": ["src/*"],
      "@tsfsa-ro": ["libs/tsfsa-ro/index"],
      "types": ["types/index"],
      "types/*": ["types/*"],
      "@ro-loading": ["libs/redux-loading/index"],
      "@ro-loading/*": ["libs/redux-loading/*"]
    },
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ]
  },
  "include": ["./src/**/*"]
}
